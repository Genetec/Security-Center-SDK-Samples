<UserControl x:Class="RMModule.Components.ChatEventCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="ctl">
  <!-- Resources -->

  <!-- Body -->
    <Grid Width="20" Height="20" Margin="2"
      ToolTipService.InitialShowDelay="0"
      ToolTip="{Binding Message, ElementName=ctl, UpdateSourceTrigger=PropertyChanged}">
        <Image Source="pack://application:,,,/RMModule;component/Resources/Chat_message.png" 
           Width="16" Height="16"
           HorizontalAlignment="Center" VerticalAlignment="Center"
           SnapsToDevicePixels="True"/>
  </Grid>
</UserControl>
