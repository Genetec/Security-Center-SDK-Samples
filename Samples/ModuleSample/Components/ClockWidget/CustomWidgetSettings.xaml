<UserControl x:Class="ModuleSample.Components.ClockWidget.CustomWidgetSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleSample.Components.ClockWidget"
             d:DataContext="{d:DesignInstance local:ClockWidget}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button MinWidth="150" MinHeight="20" Command="{Binding ViewDigitalTimeCommand}" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Digital Time" />
    </Grid>
</UserControl>

