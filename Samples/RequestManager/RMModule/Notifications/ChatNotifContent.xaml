<UserControl x:Class="RMModule.Notifications.ChatNotifContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <StackPanel>
      <Label Foreground="LightGray"
             MaxWidth="350">
        <TextBlock TextWrapping="Wrap" Text="The RequestManager module sample demonstrates communication between a standalone SDK application and a Workspace module. It features notifications, communication between components and the service, custom events in the cameras timelines and options in the Options menu." />
      </Label>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Margin="8,8,8,8"
                Width="250"
              Foreground="LightGray"
              MaxWidth="75"
              Click="OnButtonHideClicked"
              Content="Hide"/>
        <Button Margin="8,8,8,8"
                Width="250"
              Foreground="LightGray"
              MaxWidth="75"
              Click="OnButtonShowChatClicked"
              Content="Show Chat"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
