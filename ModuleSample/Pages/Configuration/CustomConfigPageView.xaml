<UserControl x:Class="ModuleSample.Pages.Configuration.CustomConfigPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleSample.Pages.Configuration"
             mc:Ignorable="d" BorderThickness="0"
             d:DataContext="{d:DesignInstance local:CustomConfigPage}">
  <CheckBox Content="This user is an administrator" RenderTransformOrigin="3.554,3.711" VerticalAlignment="Top" HorizontalAlignment="Left" IsChecked="{Binding ShouldBeAdministrator}" />
</UserControl>
